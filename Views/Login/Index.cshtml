@model RegisterViewModel
<div class="contianer text-center">
<h1>Register | <a href="login">Login</a></h1>
<br>
<form asp-action="Register" asp-controller="Login" method="post" >
    <div class="row ">
        <div class="col-lg-4 col-lg-offset-4">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input type="text" asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="text" asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <label asp-for="Confirm"></label>
            <span asp-validation-for="Confirm" class="text-danger"></span>
            <input type="password" asp-for="Confirm" class="form-control">
        </div>
    </div>
    <br>
    <input type="submit" value="Register" class="btn btn-success">
</form>
</div>